@page "/login"
@using System.ComponentModel.DataAnnotations
@inject IAuthenticationService AuthenticationService
@inject NavigationManager NavigationManager
@layout AuthLayout

<main class="py-4 pt-5 mt-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">Login</div> <div class="card-body">
                        <EditForm Model="@model" OnValidSubmit="HandleValidSubmit">
                            <div class="form-group row">
                                <label for="UserName" class="col-md-12 col-form-label">Username</label>
                                <div class="col-md-12">
                                    <InputText @bind-Value="model.UserName" class="form-control" name="UserName" />
                                    <ValidationMessage For="@(() => model.UserName)" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="password" class="col-md-12 col-form-label">Password</label>
                                <div class="col-md-12">
                                    <InputText @bind-Value="model.Password" class="form-control" name="password" />
                                    <ValidationMessage For="@(() => model.Password)" />
                                </div>
                            </div>
                            <div class="form-group row mb-0">
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-primary">
                                        Login @if (loading)
                                        {
                                            <span class="spinner-border"></span>
                                        }
                                    </button>
                                </div>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


@code {
    private AdminUserLoginRequest model = new AdminUserLoginRequest();
    private bool loading;
    private string error;

    protected override void OnInitialized()
    {
        // redirect to home if already logged in
        if (AuthenticationService.User != null)
        {
            NavigationManager.NavigateTo("");
        }
    }

    private async void HandleValidSubmit()
    {
        loading = true;
        try
        {
            await AuthenticationService.Login(model.UserName, model.Password);
            var returnUrl = NavigationManager.QueryString("returnUrl") ?? "";
            NavigationManager.NavigateTo(returnUrl);
        }
        catch (Exception ex)
        {
            error = ex.Message;
            loading = false;
            StateHasChanged();
        }
    }
}