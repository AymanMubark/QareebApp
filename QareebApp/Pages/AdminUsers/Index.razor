@page "/adminusers"
@inject IAdminUserService adminUserService
<div class="card bg-white">
    <div class="card-header  d-flex justify-content-between align-items-center" style="background-color:white;">
        <h5>
            <i class="oi oi-people mr-2"></i>
            Admin Users
        </h5>
        <a href="adminusers/create" class="btn ml-auto btn-sm btn-success">
            <i aria-hidden="true" class="oi oi-plus mr-2"></i> Add User
        </a>
    </div>
    <div class="card-body">
        @if (adminUsers == null)
        {
            <p><em>Loading...</em></p>
        }
        else
        {
            <table class="table table-responsive-sm table-borderless">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>CreatedOn</th>
                        <th class="text-right pr-4">Options</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in adminUsers)
                    {
                        <tr>
                            <td>@user.Name</td>
                            <td>@user.Email</td>
                            <td>@user.Role</td>
                            <td>@user.CreatedOn.Value.ToShortDateString()</td>
                            <td class="text-right">
                                <a href="adminUsers/edit/@user.Id" class="btn btn-light btn-sm">
                                    <i class="oi oi-pencil mr-1 text-info"></i> Edit
                                </a>
                                <button onclick="" class="btn btn-light btn-sm">
                                    <i class="oi oi-trash mr-1 text-danger"></i> Delete
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }

    </div>
</div>


@code {
    private bool loading;
    protected IEnumerable<AdminUserReponse> adminUsers;
    public async Task Load()
    {
        loading = true;
        adminUsers = await adminUserService.GetAll();
        loading = false;
    }

    protected override async Task OnInitializedAsync()
    {
        await Load();
    }
}
